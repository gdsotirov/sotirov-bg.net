          $query .= "AND (nws.title LIKE '%$sql_token%' ";
          $query .= " OR nws.body LIKE '%$sql_token%') ";
        }
        else {
          $query .= "(nws.title LIKE '%$sql_token%' ";
          $query .= " OR nws.body LIKE '%$sql_token%') ";
        }
      }
      $query .= ") ";
      $query .= "ORDER BY nws.posted DESC";
    }
