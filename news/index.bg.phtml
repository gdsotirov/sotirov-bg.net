  if ( $news_c = mysql_connect($db_host, $db_user, $db_pass) ) {
    if ( mysql_select_db("sotirov_net", $news_c) ) {
      $query = "SELECT news_bg.id, news_bg.title, news_bg.body, news_bg.author, news_bg.posted,";
      $query .= " news_bg.updated, users.name, users.first_name, users.email";
      $query .= " FROM news_bg, users";
      $query .= " WHERE news_bg.posted <> '0000-00-00 00:00:00' AND news_bg.author = users.id";
      $query .= " ORDER BY news_bg.posted DESC";
      $res = mysql_query($query, $news_c);
      if ( mysql_num_rows($res) > 0 ) {
        while ( $item = mysql_fetch_array($res, MYSQL_ASSOC) ) {
          print("<div id=\"newsid_".$item['id']."\" class=\"clear\">\n");
          print("<h3>".$item['title']."</h3>\n");
          $user_name = $item['first_name']." ".$item['name'];
          print("<p class=\"italic\">Публикувано от <a href=\"mailto:$user_name &lt;".$item['email']."&gt;\">$user_name</a>");
          print(" на ".$item['posted']."&nbsp;<abbr title=\"Eastern European Time - Източно Европейско Време\">EET</abbr>");
          if ( strtotime($item['updated']) > strtotime($item['posted']) ) {
            print(", променено на ".$item['updated']."&nbsp;<abbr title=\"Eastern European Time - Източно Европейско Време\">EET</abbr>");
          }
          print("</p>\n");
          print("<div class=\"body\">\n");
          print($item['body']);
          print("</div>\n");
          print("</div>\n\n");
        }
      }
      else
        print("<p>Новините не са достъпни в момента.</p>\n");
      mysql_free_result($res);
    }
    else
      print("<p>Новините не са достъпни в момента.</p>\n");
    mysql_close($news_c);
  }
